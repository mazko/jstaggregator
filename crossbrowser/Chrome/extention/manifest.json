{
  "manifest_version": 2,

  "name": "Urim",
  "description": "Yet another Tag Cloud based on browser content",
  "version": "0.2",

  "permissions": [
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "Attach Urim Sidebar", 
    "default_icon": { 
      "19": "data/images/icon-16.png",
      "38": "data/images/icon-32.png"
    }
  },

  "web_accessible_resources": [
    "data/images/flags/64/*.png",
    "data/css/*.css"
  ]
}